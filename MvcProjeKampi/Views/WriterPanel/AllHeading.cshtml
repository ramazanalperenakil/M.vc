@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "AllHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


@{ string color = "badge badge-success";}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Başlık İşlemleri</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>

                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Başlık Adı
                    </th>
                    <th style="width: 30%">
                        Oluşturan Yazar
                    </th>

                    <th style="width: 8%" class="text-center">
                        Kategori
                    </th>
                    <th style="width: 10%" class="text-center">
                        Durum
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    if (x.Category.CategoryName == "Dizi")
                    {
                        color = "badge badge-warning";
                    }
                    if (x.Category.CategoryName == "Filim")
                    {
                        color = "badge badge-success";
                    }
                    if (x.Category.CategoryName == "Kitap")
                    {
                        color = "badge badge-info";
                    }
                    if (x.Category.CategoryName == "Tiyat")
                    {
                        color = "badge badge-secondary";
                    }
                    <tr>
                        <td>
                            @x.HeadingID
                        </td>
                        <td>
                            <a>
                                @x.HeadingName
                            </a>
                            <br>
                            <small>
                                @(((DateTime)x.HeadingDate).ToString("dd.MM.yyyy"))

                            </small>
                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@x.Writer.WriterImage">
                                    @x.Writer.WriterName @x.Writer.WriterSurname
                                </li>

                            </ul>
                        </td>
                        <td class="project-state">

                            <span class="list-inline">@x.HeadinStatus</span>
                        </td>

                        <td class="project-state">
                            <span class="@color">@x.Category.CategoryName</span>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="/Default/Headings/@x.HeadingID">
                                <i class="fas fa-folder">
                                </i>
                                Yazılar
                            </a>
                            <a class="btn btn-info btn-sm" href="/WriterPanelContent/AddContent/@x.HeadingID">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Bu Başlığa Yaz
                            </a>
                           @* <a class="btn btn-danger btn-sm" href="/WriterPanel/DeleteHeading/@x.HeadingID">
                                <i class="fas fa-trash">
                                </i>
                                Sil
                            </a>*@
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
