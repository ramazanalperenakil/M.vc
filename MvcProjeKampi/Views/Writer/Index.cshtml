@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">

                @foreach (var x in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                               @x.WriterTitle
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@x.WriterName @x.WriterSurname</b></h2>
                                        <p class="text-muted text-sm"><b>About: </b> @x.WriterAbaut   </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mail-bulk"></i></span> Mail <br /> @x.WriterMail</li>
                                            
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@x.WriterImage" alt="" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="#" class="btn btn-sm bg-teal">
                                        <i class="fas fa-comments"></i> Yazar Başlıkları
                                    </a>
                                    <a href="/Writer/EditWriter/@x.WriterID" class="btn btn-sm btn-primary">
                                        <i class="fas fa-user"></i>  Profi Düzenle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>

    </div>
    <!-- /.card -->

</section>