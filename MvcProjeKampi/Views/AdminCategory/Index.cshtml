@using EntityLayer.Concrete;
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Sil</th>
            <th>Güncellle</th>
            <th>Başlıklar</th>
          
           
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminCategory/EditCategory/@item.CategoryID"class="btn btn-warning">Güncelle</a></td>
                <td><a class="btn btn-info">Başlıklar</a></td>
                

            </tr>

        }
    </table>
    <br />
    <a class="btn btn-success btn-lg" href="/AdminCategory/AddCategory">Yeni Kategori Ekle</a>
</div><br />