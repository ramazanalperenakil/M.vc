<div class="col-md-3">
    <a href="/Message/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Contact/Index" class="nav-link">
                        <i class="fas fa-inbox"></i> İletişim
                        <span style="width:100px" class="badge bg-success float-right">Okunmamış @ViewBag.ContactNotReadCount</span>
                        <br />
                        <span style="width:100px" class="badge bg-warning float-right">Okunmuş @ViewBag.ContactReadCount</span>

                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Message/Inbox" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> Gelen Mesajlar
                        <span style="width:100px" class="badge bg-success float-right">Okunmamış @ViewBag.MessageNotReadCount</span>
                        <br />
                        <span style="width:100px" class="badge bg-warning float-right">Okunmuş @ViewBag.MessageReadCount</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Sendbox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.MessageSendboxCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Draftbox" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-primary float-right">@ViewBag.MessageDraftboxCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-filter"></i> Spam
                        <span class="badge bg-warning float-right">65</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Diğer</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-danger"></i>
                        Önemliler
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-warning"></i> Tanıtımlar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-primary"></i>
                        Sosyal Medya
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

